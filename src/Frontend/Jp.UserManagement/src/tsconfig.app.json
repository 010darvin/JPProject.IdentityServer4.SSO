{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "baseUrl": "./",
        "module": "es2015",
        "types": [
            "node"
        ],
        "paths": {
            "@angular/*": [
                "../node_modules/@angular/*"
            ],
            "@env/*": [
                "environments/*"
            ],
            "@core/*": [
                "app/core/*"
            ],
        }
    },
    "exclude": [
        "test.ts",
        "**/*.spec.ts"
    ]
}